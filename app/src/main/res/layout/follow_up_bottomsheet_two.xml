<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/ash"
        android:textColorHint="@color/ash"
        android:id="@+id/edtHeading"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:hint="Select Heading"
        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_background"
        android:layout_height="wrap_content"></TextView>
    <EditText
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/ash"
        android:textColorHint="@color/ash"
        android:id="@id/edtRemark"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:maxLength="100"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:hint="Remark"
        android:gravity="top"
        android:background="@drawable/edittext_background"
        android:layout_height="100dp"></EditText>
    <TextView
        android:id="@+id/tvCount"
        android:text="100/100"
        android:textSize="10dp"
        android:fontFamily="@font/poppins_light"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/DRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:fontFamily="@font/poppins_semibold"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/DRed"
        android:text="When to remind ?"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDateTwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_background"
            android:drawableLeft="@drawable/ic_baseline_date_range_24"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="@color/ash"
            android:textSize="13dp"></TextView>

        <TextView
            android:textColor="@color/ash"
            android:fontFamily="@font/poppins_light"
            android:drawableLeft="@drawable/ic_baseline_access_time_24"
            android:id="@+id/tvTime"
            android:textSize="13dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_background"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>
 <LinearLayout
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">
    <TextView

        android:id="@+id/tvSave"
        android:layout_width="wrap_content"
        android:text="Save"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginRight="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:background="@drawable/lite_green_button_background"
        android:layout_height="wrap_content"></TextView>

    <TextView

        android:id="@+id/tvDelete"
        android:fontFamily="@font/poppins_semibold"
        android:layout_width="wrap_content"
        android:text="Cancel"
        android:layout_marginLeft="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:background="@drawable/red_button_background"
        android:layout_height="wrap_content"></TextView>

</LinearLayout>
</LinearLayout>