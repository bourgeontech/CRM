<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="match_parent"
    tools:context=".CustomerDetails.CustomerDetailsOneFragment">

    <RelativeLayout
        android:id="@+id/llTop"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ivback"
            android:text="Customer Details"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:visibility="gone"></TextView>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/llTop"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Suggested/Shown Vehicle"
                android:textColor="@color/DRed"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="gone"></TextView>


            <TextView
                android:fontFamily="@font/poppins_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="If Test Drive Given"
                android:textColor="@color/DRed"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="visible"></TextView>

            <RadioGroup
                android:id="@+id/rgOne"
                android:layout_width="match_parent"
                android:orientation="horizontal"
           android:layout_marginLeft="30dp"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rbyes"
                    android:text="Yes"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:fontFamily="@font/poppins_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></RadioButton>
                <RadioButton
                    android:id="@+id/rbno"
                    android:text="No"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:fontFamily="@font/poppins_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></RadioButton>
            </RadioGroup>
            <LinearLayout
                android:id="@+id/llvehicle"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
              android:visibility="gone"
                android:id="@+id/rvSuggested"
                android:layout_margin="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/ash"
                        android:textColorHint="@color/ash"
                        android:id="@+id/tvMakeOne"
                        android:textSize="13dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/edittext_background"
                        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                        android:hint="Make"
                        android:padding="15dp"></TextView>

                    <TextView
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/ash"
                        android:textColorHint="@color/ash"
                        android:id="@+id/tvModelOne"
                        android:textSize="13dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/edittext_background"
                        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                        android:hint="Model"
                        android:padding="15dp"></TextView>
                </LinearLayout>

                <EditText
                    android:id="@+id/edtVehicleNumberOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:inputType="textCapCharacters"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily="@font/poppins_light"
                    android:hint="Vehicle Number"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textColor="@color/ash"
                    android:textColorHint="@color/ash"
                    android:textSize="15dp"></EditText>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="10dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Format : MH 00 j 0000"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/ash"
                    android:textColorHint="@color/ash"
                    android:id="@+id/tvAddMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edittext_background"
                    android:drawableRight="@drawable/ic_baseline_add"
                    android:drawablePadding="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="12dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="12dp"
                    android:text="Add More"
                    >

                </TextView>


            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="Vehicle Number"
                android:textColor="@color/DRed"
                android:textSize="10dp"></TextView>

            <EditText
                android:visibility="gone"
                android:id="@+id/edtVehicleNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/poppins_light"
                android:hint="Vehicle Number"
                android:inputType="number"
                android:padding="15dp"
                android:textColor="@color/ash"
                android:textColorHint="@color/ash"
                android:textSize="15dp"></EditText>
                <LinearLayout
                    android:id="@+id/llTwo"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/poppins_light"
                            android:textColor="@color/ash"
                            android:textColorHint="@color/ash"
                            android:id="@+id/tvMakeTwo"
                            android:textSize="13dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/edittext_background"
                            android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                            android:hint="Make"
                            android:padding="15dp"></TextView>

                        <TextView
                            android:fontFamily="@font/poppins_light"
                            android:textColor="@color/ash"
                            android:textColorHint="@color/ash"
                            android:id="@+id/tvModelTwo"
                            android:textSize="13dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/edittext_background"
                            android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                            android:hint="Model"
                            android:padding="15dp"></TextView>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edtVehicleNumberTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:inputType="textCapCharacters"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/edittext_background"
                        android:fontFamily="@font/poppins_light"
                        android:hint="Vehicle Number"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textColor="@color/ash"
                        android:textColorHint="@color/ash"
                        android:textSize="15dp"></EditText>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="10dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="Format : MH 00 j 0000"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>


                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_marginLeft="20dp"
                android:text="Lead Status"
                android:textSize="10dp"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:textColor="@color/DRed"
                android:fontFamily="@font/poppins_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:textSize="15dp"
                android:visibility="gone"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/ash"
                android:textColorHint="@color/ash"
                android:id="@+id/tvLead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:hint="Lead Status"
                android:padding="15dp"></TextView>

           <LinearLayout
               android:id="@+id/llAssign"
               android:visibility="gone"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_marginLeft="20dp"
                   android:text="Branch"
                   android:textSize="10dp"
                   android:layout_marginTop="20dp"
                   android:textColor="@color/DRed"
                   android:fontFamily="@font/poppins_light"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"></TextView>
               <TextView
                   android:textSize="15dp"
                   android:fontFamily="@font/poppins_light"
                   android:textColor="@color/ash"
                   android:textColorHint="@color/ash"
                   android:id="@+id/tvBranch"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   android:background="@drawable/edittext_background"
                   android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                   android:hint="Branch"
                   android:padding="15dp"></TextView>
            <TextView
                android:layout_marginLeft="20dp"
                android:text="Lead Assigned to"
                android:textSize="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/DRed"
                android:fontFamily="@font/poppins_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:textSize="15dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/ash"
                android:textColorHint="@color/ash"
                android:id="@+id/tvAssigned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:hint="Lead Assigned to"
                android:padding="15dp"></TextView>
           </LinearLayout>

            <TextView
                android:layout_marginLeft="20dp"
                android:text="Remark"
                android:textSize="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/DRed"
                android:fontFamily="@font/poppins_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <EditText
                android:textSize="15dp"
                android:maxLength="100"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/ash"
                android:textColorHint="@color/ash"
                android:id="@+id/edtRemark"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:hint="Remark"
                android:gravity="top"
                android:background="@drawable/edittext_background"
                android:layout_height="100dp">

            </EditText>
            <TextView
                android:id="@+id/tvCount"
                android:text="100/100"
                android:textSize="10dp"
                android:fontFamily="@font/poppins_light"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/DRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:fontFamily="@font/poppins_semibold"
                android:id="@+id/tvSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/green_button_background"
                android:paddingLeft="50dp"
                android:paddingTop="12dp"
                android:paddingRight="50dp"
                android:paddingBottom="12dp"
                android:text="Submit"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white">

            </TextView>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"></ProgressBar>
</RelativeLayout>