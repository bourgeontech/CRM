<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerDetails.CustomerDetailsOneFragment">

    <RelativeLayout
        android:id="@+id/llTop"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"></ImageView>
        <TextView
            android:layout_toRightOf="@id/ivback"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:text="Customer Details"
            android:textSize="25dp"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"></TextView>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/llTop"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Current Vehicle Details"
                android:textColor="@color/DRed"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="visible"></TextView>
            <TextView
                android:layout_marginLeft="20dp"
                android:text="Make"
                android:textSize="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/DRed"
                android:fontFamily="@font/poppins_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:id="@+id/tvMake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:fontFamily="@font/poppins_light"
                android:hint="Make"
                android:padding="15dp"
                android:textColor="@color/ash"
                android:textColorHint="@color/ash"
                android:textSize="15dp"></TextView>
            <TextView
                android:layout_marginLeft="20dp"
                android:text="Model"
                android:textSize="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/DRed"
                android:fontFamily="@font/poppins_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:id="@+id/tvModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:fontFamily="@font/poppins_light"
                android:hint="Model"
                android:padding="15dp"
                android:textColor="@color/ash"
                android:textColorHint="@color/ash"
                android:textSize="15dp"></TextView>
            <TextView
                android:layout_marginLeft="20dp"
                android:text="Variant"
                android:textSize="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/DRed"
                android:fontFamily="@font/poppins_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:id="@+id/tvVariant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:fontFamily="@font/poppins_light"
                android:hint="Variant"
                android:padding="15dp"
                android:textColor="@color/ash"
                android:textColorHint="@color/ash"
                android:textSize="15dp"></TextView>
            <TextView
                android:layout_marginLeft="20dp"
                android:text="Manufacturing Year"
                android:textSize="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/DRed"
                android:fontFamily="@font/poppins_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:id="@+id/tvYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:fontFamily="@font/poppins_light"
                android:hint="Manufacturing Year"
                android:padding="15dp"
                android:textColor="@color/ash"
                android:textColorHint="@color/ash"
                android:textSize="15dp"></TextView>
            <TextView
                android:fontFamily="@font/poppins_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Preffered Choice"
                android:textColor="@color/DRed"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="visible"></TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPreffered"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp">

            </androidx.recyclerview.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/ash"
                    android:textColorHint="@color/ash"
                    android:id="@+id/tvMake1"
                    android:textSize="13dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edittext_background"
                    android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                    android:hint="Make"
                    android:padding="15dp"></TextView>

                <TextView
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/ash"
                    android:textColorHint="@color/ash"
                    android:id="@+id/tvModel1"
                    android:textSize="13dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edittext_background"
                    android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                    android:hint="Model"
                    android:padding="15dp"></TextView>
            </LinearLayout>

            <TextView
                android:visibility="visible"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/ash"
                android:textColorHint="@color/ash"
                android:id="@+id/tvAddMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:drawableRight="@drawable/ic_baseline_add"
                android:drawablePadding="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:paddingRight="10dp"
                android:paddingBottom="12dp"
                android:text="Add More"
                >

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:id="@+id/llTwo"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/ash"
                    android:textColorHint="@color/ash"
                    android:id="@+id/tvMake2"
                    android:textSize="13dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edittext_background"
                    android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                    android:hint="Make"
                    android:padding="15dp"></TextView>

                <TextView
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/ash"
                    android:textColorHint="@color/ash"
                    android:id="@+id/tvModel2"
                    android:textSize="13dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edittext_background"
                    android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                    android:hint="Model"
                    android:padding="15dp"></TextView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="Budget"
                android:textColor="@color/DRed"
                android:textSize="10dp"></TextView>

            <TextView
                android:id="@+id/edtBudget"
                android:singleLine="true"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/poppins_light"
                android:hint="Budget"
                android:inputType="number"
                android:padding="15dp"
                android:textColor="@color/ash"
                android:textColorHint="@color/ash"
                android:textSize="15dp"></TextView>


            <TextView
                android:fontFamily="@font/poppins_semibold"
                android:id="@+id/tvNext"
                android:nestedScrollingEnabled="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/red_button_background_two"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:drawablePadding="20dp"
                android:paddingLeft="50dp"
                android:paddingTop="12dp"
                android:paddingRight="10dp"
                android:paddingBottom="12dp"
                android:text="Next"
                android:textColor="@color/white">

            </TextView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <ProgressBar
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"></ProgressBar>
</RelativeLayout>