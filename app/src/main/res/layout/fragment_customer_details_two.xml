<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".CustomerDetails.CustomerDetailsOneFragment">

    <RelativeLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ivback"
            android:text="Customer Details"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:visibility="gone"></TextView>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/llTop"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Customer Info"
                android:textColor="@color/DRed"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="gone"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="Select Employment"
                android:textColor="@color/DRed"
                android:textSize="10dp"></TextView>

            <TextView
                android:id="@+id/edtEmployment"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/poppins_light"
                android:hint="Select Employment"
                android:padding="15dp"
                android:textColor="@color/ash"
                android:textColorHint="@color/ash"
                android:textSize="15dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="Annual Income"
                android:textColor="@color/DRed"
                android:textSize="10dp"></TextView>

            <TextView
                android:id="@+id/edtIncome"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/poppins_light"
                android:hint="Annual Income"
                android:inputType="number"
                android:padding="15dp"
                android:textColor="@color/ash"
                android:textColorHint="@color/ash"
                android:textSize="15dp"></TextView>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="Budget"
                android:textColor="@color/DRed"
                android:textSize="10dp"></TextView>

            <EditText
                android:visibility="gone"
                android:id="@+id/edtBudget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/poppins_light"
                android:hint="Budget"
                android:inputType="number"
                android:padding="15dp"
                android:textColor="@color/ash"
                android:textColorHint="@color/ash"
                android:textSize="15dp"></EditText>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/poppins_light"
                android:text="Lead Date"
                android:textColor="@color/DRed"
                android:textSize="10dp"></TextView>

            <TextView
                android:visibility="gone"
                android:id="@+id/edtLeadDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/poppins_light"
                android:hint="Lead Date"
                android:padding="15dp"
                android:textColor="@color/ash"
                android:textColorHint="@color/ash"
                android:textSize="15dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="When do you plan to buy?"
                android:textColor="@color/DRed"
                android:textSize="10dp"></TextView>

            <TextView
                android:id="@+id/tvPlantobuy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:fontFamily="@font/poppins_light"
                android:hint="When do you plan to buy?"
                android:padding="15dp"
                android:textColor="@color/ash"
                android:textColorHint="@color/ash"
                android:textSize="15dp"
                android:visibility="visible"></TextView>

            <EditText
                android:id="@+id/edtLeadId"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"
                android:hint="Lead Login Id"
                android:padding="15dp"
                android:textSize="13dp"
                android:visibility="gone"></EditText>

            <TextView
                android:id="@+id/tvNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="200dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/red_button_background_two"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:drawablePadding="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:paddingLeft="50dp"
                android:paddingTop="12dp"
                android:paddingRight="10dp"
                android:paddingBottom="12dp"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"></ProgressBar>
</RelativeLayout>